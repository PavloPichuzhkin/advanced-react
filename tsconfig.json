{
  "compilerOptions": {
//    "strict": true,
//    "strictNullChecks":true,
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "es2017"
    ],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
//  "include": [
//    "./config/jest/setupTests.ts",
//    "./src/**/*.ts",
//    "./src/**/*.tsx",
//  ]
}
